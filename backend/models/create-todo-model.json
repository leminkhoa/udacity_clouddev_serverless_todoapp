{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "dueDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 40,
      "pattern": "^[^\\d\\W]\\w*"
    }
  },
  "required": [
    "name",
    "dueDate"
  ],
  "additionalProperties": false
}